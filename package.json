{
  "name": "@iugu/iux",
  "version": "0.0.33",
  "description": "iUX - Javascript and Stylesheets",
  "author": "iugu",
  "license": "MIT",
  "style": "build/css/iux.css",
  "main": "build/js/iux.min.js",
  "scripts": {
    "build:sass": "gulp compile-sass",
    "build:js": "gulp compile-js",
    "build:all": "yarn build:js && yarn build:sass",
    "update:patch": "npm version patch",
    "update:minor": "npm version minor",
    "update:major": "npm version major",
    "commit:build": "git add. && git commit -am 'Update build'",
    "deploy:patch": "build:all && commit:build && yarn update:patch && npm publish --access public",
    "deploy:minor": "build:all && commit:build && yarn update:minor && npm publish --access public",
    "deploy:major": "build:all && commit:build && yarn update:major && npm publish --access public"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-css-purge": "^3.0.9",
    "gulp-sass": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "node-sass": "^6.0.1",
    "sass": "^1.42.1"
  }
}
